@model AddOrEditLectureVM
@{
    ViewData["Title"] = "إضافة محاضرة";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SaveNew" asp-controller="Lecture" method="post">
    <input type="hidden" asp-for="CourseID" />

    <div class="mb-3 col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="LectureTime" class="control-label"></label>
        <input asp-for="LectureTime" class="form-control" />
        <span asp-validation-for="LectureTime" class="text-danger"></span>
    </div>
    <div class="mb-3 col-md-6">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-success">إضافة</button>
</form>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

