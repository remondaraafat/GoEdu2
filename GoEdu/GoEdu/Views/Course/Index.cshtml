@model List<Course>



@{
    Layout = "_AdvancedLayout";
}
<style>
    body {
        font-family: 'Cairo', sans-serif;
    }

    .course-card {
        transition: all 0.3s ease;
    }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

    .course-title {
        font-size: 1.3rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 0.5rem;
    }

    .course-info {
        font-size: 0.95rem;
        color: #6c757d;
    }
</style>

